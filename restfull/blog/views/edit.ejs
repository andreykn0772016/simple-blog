<% include  ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">Редактировать <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" method="post">
        <div class="field">
            <label>Заголовок</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>

        <div class="field">
            <label>Картинка</label>
            <input type="text" class="images" name="blog[image]" value="<%= blog.image %>">
        </div>

        <div class="field">
            <label>Текст</label>
            <textarea name="blog[body]" cols="30" rows="10"><%= blog.body %></textarea>

        </div>



        <input class="ui violet big basic button" type="submit" placeholder="Отправить">
    </form>

</div>



<% include  ./partials/footer%>
