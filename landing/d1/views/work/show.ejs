<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Блюда и рецепты</p>
            <ul class="list-group">
                <li class="list-group-item active">Инфо 1</li>
                <li class="list-group-item">Инфо 2</li>
                <li class="list-group-item">Инфо 3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= working.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">Цена договорная</h4>
                    <h4><a href="/"><%= working.name %></a></h4>
                    <p><%= working.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/works/<%= working._id %>/comments/new">Добавить новый комментарий</a>
                </div>
                <hr>
                    <% working.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author %></strong>
                            <span class="pull-right">10 дней назад</span>
                            <p> <%= comment.text %></p>
                        </div>
                    </div>
                    <%}); %>

            </div>
        </div>
    </div>
</div>








<% include ../partials/footer %>