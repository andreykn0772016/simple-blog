<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Добавить комментарий в <%= working.name %></h1>
        <div style="width:30%; margin:50px auto;">

            <form action="/works/<%= working._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Введите текст">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Автор">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Нажать!</button>
                </div>
            </form>
            <a href="/works">Вернуться на главную</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>